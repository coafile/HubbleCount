<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"

    tools:context="com.hemangkumar.tablayout.TwoFrag"
    android:elevation="@dimen/abc_action_bar_content_inset_material">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="546dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="POLAR COORDINATES"
                android:id="@+id/textView"
                android:textStyle="bold"
                android:textSize="20dp"
                android:fontFamily="sans-serif-condensed"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:focusableInTouchMode="true" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/textView"
                android:layout_alignParentStart="true"
                android:layout_marginTop="35dp"
                android:weightSum="1"
                android:id="@+id/linearLayout">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:weightSum="3"
                    android:padding="10dp">

                    <EditText
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText1"
                        android:layout_gravity="bottom"
                        android:layout_weight="1"
                        android:hint="r1"
                        android:textAlignment="center" />

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:text="+"
                        android:id="@+id/textView2"
                        android:layout_gravity="bottom"
                        android:layout_weight="1"
                        android:textSize="30dp"
                        android:textAlignment="center" />

                    <EditText
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText2"
                        android:layout_gravity="bottom"
                        android:layout_weight="1"
                        android:hint="\u03981"
                        android:textAlignment="center" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:weightSum="3"
                    android:padding="10dp">

                    <EditText
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText3"
                        android:layout_gravity="bottom"
                        android:layout_weight="1"
                        android:hint="r2"
                        android:textAlignment="center" />

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:text="+"
                        android:id="@+id/textView3"
                        android:layout_gravity="bottom"
                        android:layout_weight="1"
                        android:textSize="30dp"
                        android:textAlignment="center" />

                    <EditText
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText4"
                        android:layout_gravity="bottom"
                        android:layout_weight="1"
                        android:hint="\u03982"
                        android:textAlignment="center" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:weightSum="4.0"
                android:id="@+id/linearLayout2">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"

                    android:theme="@style/MyButton"
                    android:id="@+id/button"
                    android:layout_weight="1.0"
                    android:padding="5dp"
                    android:textColor="#fff"
                    android:textSize="40dp" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"

                    android:theme="@style/MyButton"
                    android:id="@+id/button2"
                    android:layout_weight="1.0"
                    android:padding="5dp"
                    android:textColor="#fff"
                    android:textSize="40dp" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X"

                    android:theme="@style/MyButton"
                    android:id="@+id/button3"
                    android:layout_weight="1.0"
                    android:padding="5dp"
                    android:textColor="#fff"
                    android:textSize="40dp" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"

                    android:theme="@style/MyButton"
                    android:id="@+id/button4"
                    android:layout_weight="1.0"
                    android:padding="5dp"
                    android:textColor="#fff"
                    android:textSize="40dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView"
                android:layout_centerHorizontal="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="FORMAT"
                    android:id="@+id/textView4"
                    android:padding="5dp"
                    android:fontFamily="sans-serif-condensed"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MAGNITUDE (r1 OR r2) &amp; ANGLE (\u03981 OR \u03982)"
                    android:id="@+id/textView5"
                    android:padding="5dp"
                    android:fontFamily="sans-serif-condensed" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All the angles are in radians"
                    android:id="@+id/textView12"
                    android:fontFamily="sans-serif-condensed"
                    android:textStyle="italic"
                    android:padding="5dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/linearLayout2"
                android:layout_centerHorizontal="true"
                android:id="@+id/linearLayout3">


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="32dp"
                android:layout_below="@+id/linearLayout3"
                android:layout_alignParentStart="true"
                android:id="@+id/linearLayout4">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RESULT"
                    android:id="@+id/textView6"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif-condensed" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="36dp"
                android:layout_below="@+id/linearLayout4"
                android:layout_alignParentStart="true"
                android:id="@+id/linearLayout5">

            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CONVERT RESULT TO RECTANGULAR COORDINATES"
                android:theme="@style/MyButton2"
                android:id="@+id/button5"
                android:padding="5dp"
                android:letterSpacing="0.1"
                android:textColor="#fff"
                android:textSize="16dp"
                android:fontFamily="sans-serif-condensed"
                android:layout_below="@+id/linearLayout5"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentEnd="true" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/linearLayout4"
                android:layout_centerHorizontal="true"
                android:weightSum="4.0"
                android:padding="10dp"
                android:paddingBottom="0dp">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText5"

                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:hint="magnitude" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="= r"
                    android:id="@+id/textView7"
                    android:layout_weight="1.0"
                    android:textAlignment="center"
                    android:textSize="20dp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText6"

                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:hint="angle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:text="= \u0398" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="4.0"
                android:padding="10dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/button5"
                android:layout_marginTop="10dp">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText7"

                    android:layout_weight="1.0"
                    android:textAlignment="center"
                    android:hint="a (real)" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:id="@+id/textView9"

                    android:layout_weight="1.0"
                    android:textAlignment="center"
                    android:textSize="20dp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText8"

                    android:layout_weight="1.0"
                    android:textAlignment="center"
                    android:hint="b (img)" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="j"
                    android:id="@+id/textView10"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:layout_weight="0.57" />

            </LinearLayout>

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>